		</LinearLayout>

	</com.gesuper.power.CustomCubic>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
		<TextView
	 	    android:id="@+id/score"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:text="@string/score" />
		
		<TextView
	 	    android:id="@+id/highest_score"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:text="@string/score" />
	</LinearLayout>
	
